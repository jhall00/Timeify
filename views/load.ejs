<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- for tailwind (uncomment when ready to use) -->
        <link rel="stylesheet" href = "/styles.css">

        <title>Load</title>
    </head>
    <body class="bg-main-background bg-cover ">
        <div class = "flex justify-center">

            <div class = "m-8 bg-gradient-to-r from-white_grad1 to-white_grad2 backdrop-blur-lg shadow-lg w-5/6 h-max rounded-2xl pb-16">

                <!-- nav bar -->

                <div class="flex  justify-between bg-transparent_white w-full h-14 rounded-t-2xl ">
                    <div class ="flex">
                        <a class="" href="/home">
                            <img src="Logo.svg" class="p-2 h-14"></img>
                        </a>
                    </div>
                    <div class="justify-end pt-3">

                        <a class="hover:text-xl pr-6 font-montserrat font-bold text-main-green text-lg" href="/generate">Generate</a>

                        <a class="hover:text-xl pr-6 font-montserrat font-bold text-main-green text-lg underline decoration-2 underline-offset-1" href="/load">Load</a>

                    </div>

                </div>
                <p class = "flex justify-center p-8 font-montserrat text-2xl text-main-green">Load a pre-existing playlist, which uses our timer notifications.</p>

                <div class = "flex justify-center">
                    <div class = "bg-gradient-to-br from-green_grad1 to-green_grad2 backdrop-blur-lg shadow-lg w-5/6 h-max rounded-2xl p-10">

                    <div class = "flex justify-center">
                        <form action="/load" method="post">

                            <div class="md:flex md:items-center mb-6">
                                <div class="w-full">
                                    <label class="font-montserrat block text-white font-bold md:text-left mb-1 md:mb-0 pr-1" for="my_source">
                                        Source:
                                    </label>
                                </div>
                                    <button class = "font-montserrat bg-white hover:bg-gray-200 text-black font-bold src-button py-3 px-4 rounded-xl drop-shadow-md" id="searchBtn">Source</button>

                            </div>




                            <div class="md:flex justify-center">
                                <input class = "font-montserrat bg-mint hover:bg-shadow_mint text-black font-bold py-3 px-4 rounded-xl drop-shadow-md" type="submit" id = "loadSubmit" value="Load"/><br><br><hr>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            </div>

            <div class="search-popup" id="mySearch">
                <div class="search-content rounded-xl">
                    <span class="close">&times;</span>
                    <h1 class="text-4xl">Spotify Music Search</h1>
                    <input
                        class="font-montserrat bg-gray-200 appearance-none border-2 border-gray-200 rounded w-fit py-2 pl-3 pr-8 ml-3 text-gray-700 leading-tight focus:outline-none focus:bg-white"
                        id="search_term" type="text" name="searchTerm" aria-label="Search" placeholder="Search"><br>
                    <input class="font-montserrat bg-mint hover:bg-shadow_mint text-black font-bold py-3 px-4 rounded-xl drop-shadow-md"
                        id="searchSubmit" type="submit" value="Search" name="search" /><br><br>
                    <hr>
                    <br>
                    <div id="popup-albPly-btn">
                        <input class="font-montserrat text-black py-3 px-4 rounded-xl drop-shadow-md selected" type="button" value="Albums"
                            name="albums" id="album_button" />
                        <input class=" font-montserrat  text-black py-3 px-4 rounded-xl drop-shadow-md" type="button"
                            value="Playlists" name="playlists" id="playlist_button" />
                    </div>

                    <div class="flex" id="searchResults">

                
                    </div>

                    <div>
                        <% if (results.length > 0) { %>
                            <% results.forEach(result => { %>
                                <p>
                                    <%=result.title%>
                                </p>
                                <% results.artists.forEach(artist => { %>
                                    <%=result.name%>
                                <% }) %>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>


        </div>
        <a class = "" href="/player/37i9dQZF1DZ06evO0ENBD2">
            <button
                class="justify-center font-montserrat bg-white hover:bg-shadow_mint text-black font-bold src-button py-3 px-4 rounded-xl drop-shadow-md">Hard-coded
                link to player</button>
        </a>

        <a href="/playlists">
            <button class = "justify-center font-montserrat bg-white hover:bg-shadow_mint text-black font-bold src-button py-3 px-4 rounded-xl drop-shadow-md" >Hard-coded link to playlist caclulations</button>
        </a>

        <script>
            var search = document.getElementById("mySearch");
            var btn = document.getElementById("searchBtn");
            var span = document.getElementsByClassName("close")[0];

            btn.onclick = function() {
                search.style.display = "block";
                return false;
            }

            span.onclick = function() {
                search.style.display = "none";
            }

            window.onclick = function(event) {
                if (event.target == search) {
                    search.style.display = "none";
                }
            }
        </script>
        <script src="/search.js"></script>
    </body>
</html>